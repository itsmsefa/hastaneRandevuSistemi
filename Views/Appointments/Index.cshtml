@model CityViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form>
                <div class="form-group">
                    <label for="citySelect">City</label>
                    <select class="form-control" id="citySelect">
                        <option value="">Select City</option>
                        <!-- Populate this list dynamically with cities -->
                        <option value="city1">City 1</option>
                        <option value="city2">City 2</option>
                        <!-- Add more cities as needed -->
                    </select>
                </div>
                <div class="form-group">
                    <label for="districtSelect">District</label>
                    <select class="form-control" id="districtSelect">
                        <option value="">Select District</option>
                        <!-- Populate this list dynamically based on city selection -->
                        <!-- For example: when city1 is selected, show its districts -->
                    </select>
                </div>
                <div class="form-group">
                    <label for="departmentSelect">Department</label>
                    <select class="form-control" id="departmentSelect">
                        <option value="">Select Department</option>
                        <!-- Populate this list dynamically based on district selection -->
                    </select>
                </div>
                <div class="form-group">
                    <label for="hospitalSelect">Hospitals</label>
                    <select class="form-control" id="hospitalSelect">
                        <option value="">Select Hospital</option>
                        <!-- Populate this list dynamically based on clinic selection -->
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Search Appointment</button>
            </form>
        </div>
    </div>
</div>

<div class="col-md-4">
    <form asp-controller = "Appointments" asp-action ="Index" method="post" role="form">
        <div class="form-group">
            <div class="alert-danger" asp-validation-summary = "ModelOnly"></div>
            <label asp-for="CityId"></label>
            <select asp-for = "CityId" class="form-control" asp-items = "@(new SelectList(ViewBag.ListOfCities, "Value", "Text" ))" ></select>
        </div>
        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Submit">
        </div>
    </form>
</div>